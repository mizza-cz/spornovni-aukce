{% extends "@components/base/base.twig" %} {% set title = "05.0_club-detail" %}
{% block main %} {% include "@components/header/header.twig" %}
<main id="main-content" class="main" aria-label="Hlavní obsah">
  <section class="container pt-14">
    {% include "@components/club-detail/club-detail.twig" %}
    <form
      class="mb-7 filterMenu d-flex justify-content-between gap-4 pt-5 flex-md-nowrap flex-wrap"
    >
      <input type="hidden" name="category" value="1" />

      <div role="tablist" class="d-flex flex-wrap gap-4 filterMenu-categories">
        <button
          name="category"
          value="all"
          class="badge-primary-500 has-hover"
          role="tab"
          aria-selected="true"
        >
          Aktuální aukce
          <span>48</span>
        </button>
        <button
          name="category"
          value="1"
          class="badge-gray-100 has-hover"
          role="tab"
        >
          Ukončené aukce
          <span>12</span>
        </button>
        <button
          name="category"
          value="2"
          class="badge-gray-100 has-hover"
          role="tab"
        >
          Info o klubu
        </button>
        <button
          name="category"
          value="3"
          class="badge-gray-100 has-hover"
          role="tab"
        >
          {% include "@images/link.svg" %} Oficiální web
        </button>
        <button
          name="category"
          value="4"
          class="badge-gray-100 has-hover"
          role="tab"
        >
          {% include "@images/link.svg" %} Fanshop
        </button>
      </div>
      <select class="js-select">
        <option value="">Nejnovější</option>
        <option value="">Doporučujeme</option>
        <option value="">Podle hodnocení</option>
      </select>
    </form>
    {% include "@components/products/products.twig" %}
  </section>
  <section class="bids-section pb-20 pt-20 bg-light">
    <h3 class="h4 mb-9 px-5 text-center fw-semibold">
      Poslední příhozy
      <span class="text-primary-500">Berani Zlín</span>
    </h3>
    <div class="container">
      <div class="swiper bids-swiper">
        <ul role="list" class="swiper-wrapper infinite-scroll-swiper">
          {% for i in 1..5 %}
          <li class="swiper-slide">
            <div class="rounded-xl bg-gray-200 p-8 bidsItem">
              <div class="badge-primary-300 mb-3">Nyní</div>
              <a class="text-xl-semibold mb-3 d-block underline-hover" href="#">
                Hrané hokejky českých reprezentantů
              </a>
              <div class="text-gray-400 text-sm-medium mb-6">
                # Hokejka Marka Židlického
              </div>
              <div class="d-flex gap-4 align-items-center flex-wrap mb-6">
                <div class="d-flex align-items-center gap-2">
                  <img
                    src="images/ico/user-b.svg"
                    width="24"
                    height="24"
                    class="object-fit-content"
                    alt=""
                  />
                  <h3 class="text-base-semibold">Martin P.</h3>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <img
                    src="images/ico/coins.svg"
                    width="24"
                    height="24"
                    class="object-fit-content"
                    alt=""
                  />
                  <h3 class="text-base-semibold">5 000 Kč</h3>
                </div>
              </div>
              <button
                data-bs-toggle="modal"
                data-bs-target="#bidsModal"
                class="button-gray-800"
              >
                {% include "@images/plus.svg" %} Přihodit
              </button>
            </div>
          </li>
          <li class="swiper-slide">
            <div class="rounded-xl bg-gray-200 p-8 bidsItem">
              <div class="badge-gray-400 mb-3">před 5 min</div>
              <a class="text-xl-semibold mb-3 d-block underline-hover" href="#">
                Hrané hokejky českých reprezentantů
              </a>
              <div class="text-gray-400 text-sm-medium mb-6">
                # Hokejka Marka Židlického
              </div>
              <div class="d-flex gap-4 align-items-center flex-wrap mb-6">
                <div class="d-flex align-items-center gap-2">
                  <img
                    src="images/ico/user-b.svg"
                    width="24"
                    height="24"
                    class="object-fit-content"
                    alt=""
                  />
                  <h3 class="text-base-semibold">Martin P.</h3>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <img
                    src="images/ico/coins.svg"
                    width="24"
                    height="24"
                    class="object-fit-content"
                    alt=""
                  />
                  <h3 class="text-base-semibold">5 000 Kč</h3>
                </div>
              </div>
              <button
                data-bs-toggle="modal"
                data-bs-target="#bidsModal"
                class="button-gray-800"
              >
                {% include "@images/plus.svg" %} Přihodit
              </button>
            </div>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </section>

  {% include "@components/reference-section/reference-section.twig" %}
</main>

{% endblock %}
